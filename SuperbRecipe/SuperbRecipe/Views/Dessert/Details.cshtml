@model Dessert

<h2>@Model.Name</h2>


<div class="thumbnail">

    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>

        <p>@Model.Notes</p>
        <h6>@Model.AllergyInformation</h6>
        <div class="addToCart">
            <p class="button">
                <a class="btn-btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-dessertId="@Model.DessertId">
                    Add to Cart

                </a>
        </div>
    </div>

</div>