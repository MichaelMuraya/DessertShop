@model IEnumerable<Category>



    <li class="dropdown">
        
            <a asp-controller="Dessert" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">Dessert<b class="caret"></b>              
            </a>
            <ul class="dropdown-menu">
                @foreach (var category in Model)
                {
                    <li><a asp-controller="Dessert" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName</a></li>
                }
                <li class="divider">
                </li>
                <li><a asp-controller="Dessert" asp-action="List" asp-route-Category="">View all Desserts</a></li>
            </ul>
          
        
    </li>
